header.header
  nav.nav.nav--tours  
    if user
      a.nav__el(href='/overview') All tracks
      a.nav__el(href='/createTrack') Create track
      form.nav__search
        button.nav__search-btn
          svg: use(xlink:href='/img/icons.svg#icon-search')
        input#searchInput.nav__search-input(type='text' placeholder='Search tracks')
  .header__logo
    img(src='/img/logo-bugtacker-white.png' alt='Bugtracker logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up