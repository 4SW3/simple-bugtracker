extends base

block content
  main.main
    .auth-form
      h2.heading-secondary.ma-bt-lg= title
      form.form.forgot--form
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group
          button.btn.btn--green.btn--sendemail-passtoken Send
          a.btn.btn--green.btn-i(href='/') 
            i.fas.fa-arrow-left.fa-lg
            span Back